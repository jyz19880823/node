<%- include header %>

<h1 id="heading">All Posts</h1>
<% locals.posts.forEach(function(post,index){ %>
<div class="art">
	<h3><b><a href="/post/<%= post.title%>"><%= post.title %></a></b> <span style="font-weight:normal;font-size:12px;color:gray">By <%= post.user %> at <%= post.time%></span></h3>
	<p><%= post.post %></p>
	</div>
<% })%>
