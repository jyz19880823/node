<%- include header %>
<h1><%= title %></h1>
<span><%= name %> at <%= time %></span>
<p style="width:50%"><%= post %></p>
<a href="<%= title %>/edit">Edit</a> | <a href="<%= title%>/delete">Delete</a>
<section>
Comments:<br/>
   <% comments.forEach(function(comm,index){%>
<p class="comment">
   	  <%= comm.name %> say : "
	  <%= comm.content%> ";
	</p>
	<br>
   <%})%>
</section>
<form action="/post/<%= title %>/comment/add" method="post">
	<h6>Add a comment</h6>
	<input type="text" name="name" placeholder="name"> <br>
	<input type="text" name="content" placeholder="comment content"><br>
	<input type="submit" value="submit">
</form>
<%- include footer %>
